--- scripts/linux/hal-system-lcd-get-brightness-linux	2007-05-11 09:29:30.000000000 +0200
+++ scripts/linux/hal-system-lcd-get-brightness-linux	2007-05-15 23:10:51.000000000 +0200
@@ -64,6 +64,12 @@
 	# cat /proc/omnibook/lcd
 	#  LCD brightness:  7
 	value="`cat $HAL_PROP_LINUX_ACPI_PATH | awk '{print $3;}'`"
+elif [ "$HAL_PROP_LAPTOP_PANEL_ACCESS_METHOD" = "fjtbl" ]; then
+	# cat /proc/acpi/video/VGA/LCD/brightness
+	#  levels:          8 4 1 2 3 4 5 6 7 8 (initial 0, but max.)
+	#  current:         5
+	value="`cat /proc/acpi/video/VGA/LCD/brightness | grep current: | awk '{print $2;}'`"
+	[ $value = 0 ] && value=8
 else
 	echo "org.freedesktop.Hal.Device.LaptopPanel.NotSupported" >&2
 	echo "No ACPI method found" >&2
