#!/bin/sh
# preinst script for modules package built from fsc-btns

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

module="fsc_btns"
moduledir="/lib/modules/_KVERS_/ubuntu/misc"

case "$1" in
    install|upgrade)
        if [ -f "${moduledir}/${module}_lum.ko" ]; then
            rm -f "${moduledir}/${module}.ko"
            dpkg-divert --remove "${moduledir}/${module}.ko"
        fi
        if [ -f "${moduledir}/${module}.ko" ]; then
            dpkg-divert --add --package "fsc-btns-modules-_KVERS_" \
                --divert "${moduledir}/${module}.lum" \
                --rename "${moduledir}/${module}.ko"
        fi
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac


#DEBHELPER#

exit 0


