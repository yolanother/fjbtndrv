#!/bin/sh
# preinst script for modules package built from fsc-btns

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

module="fsc_btns"
moduledir="/lib/modules/_KVERS_/ubuntu/misc"

case "$1" in
    install|upgrade)
        dpkg-divert --add --package "fsc-btns-modules-_KVERS_" \
            --divert "${moduledir}/${module}_lum.ko" \
            --rename "${moduledir}/${module}.ko"
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac


#DEBHELPER#

exit 0


