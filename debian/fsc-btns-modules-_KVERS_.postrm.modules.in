#!/bin/sh
# postrm script for modules package built from fsc-btns

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

module="fsc_btns"
moduledir="/lib/modules/_KVERS_/ubuntu/misc"

case "$1" in
    purge|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    remove)
        dpkg-divert --remove --package "fsc-btns-modules-_KVERS_" \
            --divert "${moduledir}/${module}_lum.ko" \
            --rename "${moduledir}/${module}.ko"
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0


